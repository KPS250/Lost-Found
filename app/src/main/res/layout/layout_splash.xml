<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="10dp">

        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/iv_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:alpha="1"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_centerHorizontal="true"
                app:lottie_fileName="star.json"
                android:visibility="visible"/>


        <TextView
                android:id="@+id/date_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_image"
                android:text="Till Date"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

        <RelativeLayout
                android:id="@+id/rl_record1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_label"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/label_lost_items_listed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lost Items Listed"
                    android:textColor="@color/colorDarksLateGrey" />

            <TextView
                    android:id="@+id/tv_lost_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:textColor="@color/colorDimGrey"
                    android:text="10015" />
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_record2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_record1"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/label_lost_items_returned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lost Items Returned"
                    android:textColor="@color/colorDarksLateGrey" />

            <TextView
                    android:id="@+id/tv_items_returned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:textColor="@color/colorDimGrey"
                    android:text="900" />
        </RelativeLayout>

        <TextView
                android:id="@+id/monthly_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_record2"
                android:layout_marginTop="10dp"
                android:text="Monthly"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

        <RelativeLayout
                android:id="@+id/rl_monthly_record1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/monthly_label"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/label_monthly_lost_items_listed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lost Items Listed"
                    android:textColor="@color/colorDarksLateGrey" />

            <TextView
                    android:id="@+id/tv_monthly_lost_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:textColor="@color/colorDimGrey"
                    android:text="254" />
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_monthly_record2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_monthly_record1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

            <TextView
                    android:id="@+id/label_monthly_lost_items_returned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lost Items Returned"
                    android:textColor="@color/colorDarksLateGrey" />

            <TextView
                    android:id="@+id/tv_monthly_items_returned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:textColor="@color/colorDimGrey"
                    android:text="201" />
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>